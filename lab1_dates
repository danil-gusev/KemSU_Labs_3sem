#include <iostream>
#include <fstream>

using namespace std;

struct Date {
	int year, month, day;
	void Show() { cout << day << "." << month << "." << year << " "; }
	void nextDate() {
		day++;
		if ((month == 2) && (year % 4 == 0) && (day == 30)) {
			day = 1;
			month = 3;
		}
		else if ((month == 2) && (year % 4 != 0) && (day == 29)) {
			day = 1;
			month = 3;
		}
		if ((day == 32) && ((month == 3) || (month == 5) || (month == 7) || (month == 8) || (month == 10) || (month == 1))) {
			day = 1;
			month += 1;
		}
		if ((day == 31) && ((month == 4) || (month == 6) || (month == 9) || (month == 11))) {
			day = 1;
			month += 1;
		}
		else if ((day == 32) && (month == 12)) {
			day = 1;
			month = 1;
			year += 1;
		}
	}
	void prevDate() {
		day--; 
		if (day == 0) {
			if ((month == 3) && (year % 4 != 0)) {
				day = 28;
				month--;
			}
			else if ((month == 3) && (year % 4 == 0)) {
				day = 29;
				month--;
			}
			else if ((month - 1 == 3) || (month - 1 == 5) || (month - 1 == 7) || (month - 1 == 8) || (month - 1 == 10) || (month - 1 == 0)) {
				day = 31;
				month--;
				if (month == 0) {
					month = 12;
					year--;
				}
			}
			else {
				day = 30;
				month--;
			}
		}
	}
};

void checkData() {
	ifstream fin("data.txt");
	if (!fin.is_open()) {
		cout << "File can't be opened\n";
		exit(0);
	}
	fin.close();
}

int main() {
	setlocale(LC_ALL, "ru");
	checkData();
	ifstream fin("data.txt");
	Date temp;
	int n = 0;
	while (!fin.eof()) {
		fin >> temp.day >> temp.month >> temp.year;
		n++;
	}
	fin.seekg(0, fin.beg); 
	Date* DT;
	DT = new Date[n];
	int i = 0;
	while (!fin.eof()) {
		fin >> DT[i].day >> DT[i].month >> DT[i].year;
		i++;
	}
	fin.close();
	for (int i = 0; i < n; i++) {
		cout << endl << i + 1 << " - Current date: ";
		DT[i].Show();
		DT[i].prevDate();
		cout << "Previous date: ";
		DT[i].Show();
		DT[i].nextDate();
	}
	cout << endl << endl << "Personal task" << endl;
	for (int i = 0; i < n; i++) {
		if ((DT[i].day == 31) && (DT[i].month == 12)) {
			cout << i + 1 << ": ";
			DT[i].Show();
			cout << "-- ";
			DT[i].nextDate();
			DT[i].Show();
			cout << endl;
		}
	}
	return 0;
}
